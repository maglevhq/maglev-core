<%= render Maglev::Uikit::MenuDropdownComponent.new(icon_name: "more_2") do |component| %>
  <% component.with_item_link_to('#') do |menu_item| %>
    <% menu_item.with_icon_content('home') %>
    <% menu_item.with_label_content('Action #1') %>
  <% end %>

  <% component.with_item_nested_menu(placement: 'right') do |menu_item| %>
    <% menu_item.with_icon_content('home') %>
    <% menu_item.with_label_content('Action #2') %>
    <% menu_item.with_sub_label_content('Nested menu here!') %>
    
    <% menu_item.with_item_link_to('#') do |sub_menu_item| %>
      <% sub_menu_item.with_icon_content('home') %>
      <% sub_menu_item.with_label_content('Action #2.1') %>
    <% end %>

    <% menu_item.with_item_link_to('#') do |sub_menu_item| %>
      <% sub_menu_item.with_icon_content('home') %>
      <% sub_menu_item.with_label_content('Action #2.2') %>
    <% end %>
  <% end %>

  <% component.with_item_link_to('#') do |menu_item| %>
    <% menu_item.with_icon_content('home') %>
    <% menu_item.with_label_content('Action #3') %>
  <% end %>
<% end %>