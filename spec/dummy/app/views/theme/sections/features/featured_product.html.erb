<%= maglev_section.wrapper_tag class: 'featured-product bg-white' do %>
  <%= maglev_section.setting_tag :product, class: 'featured-product' do |product| %>
    <div class="flex flex-col-reverse items-center justify-center max-w-7xl px-10 pt-16 mx-auto md:flex-row md:space-x-20 lg:space-x-32 md:pt-24">
      <div class="box-content relative flex items-center justify-center flex-shrink-0 pb-16 w-80 h-96">
        <%= image_tag main_app.cdn_image_url(product.thumbnail), class: 'w-full h-full object-contain' %>
      </div>
      <div class="flex flex-col items-start w-full h-full max-w-xs pb-10 space-y-5 md:pb-0 md:max-w-none">
          <%= maglev_section.setting_tag :title, html_tag: 'h2', class: 'text-5xl font-black text-zinc-900' %>
          <%= maglev_section.setting_tag :description, class: 'text-lg text-zinc-500' %>
          <a href="#_" class="flex items-center px-4 py-2 font-medium text-zinc-900 border-2 border-zinc-900 rounded-lg" data-rounded="rounded-lg" data-primary="gray-900">
              Just for <%= number_to_currency product.price %>
              <svg class="w-4 h-4 ml-1 -mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
          </a>
      </div>
    </div>
  <% end %>
<% end %>