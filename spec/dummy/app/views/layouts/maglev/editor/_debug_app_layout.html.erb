<% # Please override this file to customize the top bar or the sidebar %>

<%= render Maglev::Uikit::AppLayout::LayoutComponent.new(page: @page) do |layout| %>
  <% layout.with_sidebar do |sidebar| %>    
    <% sidebar.with_link(path: maglev.editor_pages_path(locale: I18n.locale, page_id: @page.id), icon: 'ri_file_copy_line') %>
    <% sidebar.with_link(path: maglev.editor_sections_path(locale: I18n.locale, page_id: @page.id), icon: 'ri_stack_line') %>
  <% end %>

  <%= content %>
<% end %>