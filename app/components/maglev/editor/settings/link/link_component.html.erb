<%= tag.div(
  data: {
    controller: "editor-setting",
    editor_setting_setting_id_value: definition.id,
    editor_setting_setting_type_value: definition.type,
    editor_setting_core_controller_name_value: 'uikit-form-link',
    action: %(
      uikit-form-link:change->editor-setting#change
      hashchange@window->editor-setting#focus
    )
  }
) do %>
  <%= render Maglev::Uikit::Form::LinkComponent.new(
    name: input_name,
    path: edit_link_path,
    options: {
      label: label,
      value: value,
      with_text: definition.options[:with_text]
    }
  ) %>
<% end %>