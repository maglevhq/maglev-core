<%= tag.div(
  data: {
    controller: "editor-setting",
    editor_setting_setting_id_value: definition.id,
    editor_setting_setting_type_value: definition.type,
    editor_setting_core_controller_name_value: "uikit-form-text-field",
    action: %(
      uikit-form-text-field:change->editor-setting#change
      hashchange@window->editor-setting#focus
    )
  }
) do %>
  <%= render Maglev::Uikit::Form::TextFieldComponent.new(
    label: label,
    name: input_name,
    options: { value: value },   
  ) %>
<% end %>