<%= tag.div(
  data: {
    controller: "editor-setting",
    editor_setting_setting_id_value: definition.id,
    editor_setting_setting_type_value: definition.type,
    action: "uikit-form-color-field:change->editor-setting#change"
  }
) do %>
  <%= render Maglev::Uikit::Form::ColorFieldComponent.new(
    name: input_name,
    options: {
      label: label,  
      value: value,
      presets: definition.options[:presets],      
    }
  ) %>
<% end %>