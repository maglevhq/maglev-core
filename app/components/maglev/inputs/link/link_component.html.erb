<%= tag.div(
  data: {
    controller: "editor-input",
    'editor-input-setting-id-value': definition.id,
    'editor-input-setting-type-value': definition.type,
    action: %(
      uikit-form-link:change->editor-input#change      
    )
  }
) do %>
  <%= render Maglev::Uikit::Form::LinkComponent.new(
    name: input_name,
    path: helpers.edit_editor_link_path(link: value, input_name: input_name),
    options: {
      label: label,
      value: value,
      with_text: definition.options[:with_text]
    }
  ) %>
<% end %>