<%= tag.div(
  data: {
    controller: 'editor-text-input',
    'editor-text-input-setting-id-value': setting.id,
    action: %(
      hashchange@window->editor-text-input#focus
    )
  }
) do %>
  <%= render Maglev::Uikit::Form::RichtextComponent.new(
    label: label,
    name: input_name,
    options: {
      value: value,
      line_break: setting.options[:line_break],
      edit_link_path: helpers.edit_editor_link_path
    },
    html_options: {
      data: { 
        action: %(
          uikit-form-richtext:onUpdate->editor-text-input#onChange
          editor-text-input:focus@window->uikit-form-richtext#focus
        )
      }
    }
  ) %>
<% end %>