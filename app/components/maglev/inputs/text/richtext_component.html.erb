<%= tag.div(
  data: {
    controller: 'editor-input',
    'editor-input-setting-id-value': definition.id,
    'editor-input-setting-type-value': definition.type,
    'editor-input-core-controller-name-value': 'uikit-form-richtext',
    action: %(
      hashchange@window->editor-input#focus
      uikit-form-richtext:change->editor-input#change
    )
  }
) do %>
  <%= render Maglev::Uikit::Form::RichtextComponent.new(
    label: label,
    name: input_name,
    options: {
      value: value,
      line_break: definition.options[:line_break],
      edit_link_path: helpers.edit_editor_link_path
    }
  ) %>
<% end %>