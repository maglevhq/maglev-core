<div 
  data-controller="editor-text-input" 
  data-editor-text-input-setting-id-value="<%= setting.id %>"
  data-action="hashchange@window->editor-text-input#focus"
>
  <%= render Maglev::Uikit::Form::TextFieldComponent.new(
    label: label,
    name: input_name,
    options: {
      value: value,
    },
    html_options: {
      data: { 
        'editor-text-input-target': 'input',
        action: 'keyup->editor-text-input#onKeyUp' 
      }
    }
  ) %>
</div>