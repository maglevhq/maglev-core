<%= tag.div(
  data: {
    controller: 'editor-input',
    editor_input_setting_id_value: definition.id,
    editor_input_setting_type_value: definition.type,
    editor_input_core_controller_name_value: 'uikit-form-icon-field',
    action: %(
      uikit-form-icon-field:change->editor-input#change
      hashchange@window->editor-input#focus
    )
  }
) do %>
  <%= render Maglev::Uikit::Form::IconFieldComponent.new(    
    name: input_name,
    search_path: helpers.editor_icons_path(source: input_source),
    options: {
      label: label,
      value: value,
    }
  ) %>
<% end %>