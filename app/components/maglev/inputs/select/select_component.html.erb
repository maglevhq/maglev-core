<%= tag.div(
  data: {
    controller: "editor-input",
    'editor-input-setting-id-value': definition.id,
    'editor-input-setting-type-value': definition.type,
    action: %(
      uikit-form-select:change->editor-input#change
    )
  }
) do %>
  <%= render Maglev::Uikit::Form::SelectComponent.new(
    label: label,
    name: input_name,
    choices: choices,
    options: {
      value: value,
      include_blank: true,
    }
  ) %>
<% end %>