<%= tag.div(
  data: {
    controller: 'editor-input',
    editor_input_setting_id_value: definition.id,
    editor_input_setting_type_value: definition.type,
    editor_input_core_controller_name_value: 'uikit-form-image-field',
    action: %(
      uikit-form-image-field:change->editor-input#change
      hashchange@window->editor-input#focus
    )
  }
) do %>
  <%= render Maglev::Uikit::Form::ImageFieldComponent.new(    
    name: input_name,
    search_path: helpers.editor_assets_path({ 
      picker: true, 
      source: image_source
    }),
    options: {
      label: label,
      value: value,
      spread_fields: true
    },    
    alt_text: {
      name: alt_text_input_name,
      value: value&.fetch(:alt_text, nil),
      placeholder: t('maglev.editor.image_input.alt_text_placeholder'),
    }    
  ) %>
<% end %>