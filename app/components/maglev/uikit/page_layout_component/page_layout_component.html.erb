<div 
  id="page-layout"   
  data-controller="uikit-page-layout"
  data-action="turbo:before-render@window->uikit-page-layout#vtPair"
  class="<%= wrapper_classes %>"
  <%= expanded ? 'data-expanded' : 'data-not-expanded' %>  
>
  <div class="py-6 mx-4">
    <% title_html = capture do %>
      <h2 class="text-gray-800 font-semibold text-lg capitalize-first antialiased">
        <%= title %>
      </h2>
    <% end %>

    <div class="h-6 flex items-center">
      <div class="shrink-0">
        <% if pre_title? %>
          <%= pre_title %>
        <% else %>
          <%= title_html %>
        <% end %>
      </div>
      <div class="ml-auto pl-2 gap-0.5 flex items-center">
        <turbo-frame id="page-layout-notification">
          <% if notification? %>
            <%= notification %>
          <% end %>
        </turbo-frame>

        <%= link_to back_path, class: 'h-7 w-7 flex items-center justify-center rounded-full focus:outline-none transition-colors duration-200 relative -right-2 bg-gray-600/0 hover:text-gray-900 text-gray-800 hover:bg-gray-600/10', data: { turbo_frame: '_top' } do %>
          <%= render Maglev::Uikit::IconComponent.new(name: 'close', size: '1.15rem') %>
        <% end %>
      </div>
    </div>

    <% if pre_title? %>
      <%= title_html %>
    <% end %>

    <% if description? %>
      <div class="text-gray-400 text-sm">
        <%= description %>
      </div>
    <% end %>
  </div>

  <div class="flex-1 flex flex-col overflow-y-auto mx-4">
    <%= content %>
  </div>

  <% if footer? %>
    <div class="mt-4 mx-4 pb-4">
      <%= footer  %>
    </div>
  <% end %>
</div>