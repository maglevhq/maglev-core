

<div class="space-y-1 flex flex-col" data-controller="uikit-form-select">
  <label for="<%= dom_id %>" class="block font-semibold text-gray-800 flex items-center gap-2">
    <span><%= label %></span>
    <% if error %>
      <span class="text-red-700 bg-red-100 text-xs py-1 px-3 rounded"><%= error %></span>
    <% end %>
  </label>
  <div class="grid grid-cols-1">
    <%= select_tag name, 
      html_choices, 
      class: 'col-start-1 row-start-1 w-full appearance-none block py-2 px-3 rounded bg-gray-100 text-gray-800 focus:outline-none focus:ring focus:ring-inset focus:ring-2 focus:ring-editor-primary/50 placeholder-gray-500', 
      **input_tag_options,
      **html_options
    %>
    <%= render Maglev::Uikit::IconComponent.new(name: 'arrow_down', size: '1.25rem', class_names: 'pointer-events-none col-start-1 row-start-1 mr-2 size-5 self-center justify-self-end text-gray-500 sm:size-4') %>    
  </div>
</div>