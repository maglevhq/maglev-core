<div 
  class="bg-gray-100 w-full h-full absolute top-16 left-16 right-0 bottom-0" 
  data-controller="page-preview"
  data-page-preview-url-value="<%= current_maglev_page_urls[:preview] %>"
  data-page-preview-primary-color-value="<%= maglev_primary_hex_color %>"
  data-action="uikit-device-toggler:change@window->page-preview#changeDevice maglev:client-ready@window->page-preview#clientReady"
>
  <div class="flex h-full w-full justify-center items-center" data-page-preview-target="loading">
    <p class="animate-bounce duration-200">
      <%= t('maglev.editor.page_preview.loading') %>
    </p>
  </div>

  <iframe src="<%= current_maglev_page_urls[:preview] %>" class="w-full h-full hidden" data-page-preview-target="iframe"></iframe>
</div>