<div class="flex items-center h-full px-4">
  <%= button_to revert_editor_page_path(current_maglev_page.id, **maglev_editing_route_context), 
    method: :post, 
    class: maglev_button_classes(color: :secondary, size: :medium),
    form_class: 'group/form is-default',
    disabled: !current_maglev_page.need_to_be_published? || !current_maglev_page.published?,
    data: { controller: 'submit-button' } do %>
    <%= maglev_button_label(
      t('maglev.editor.header_nav.revert_button.default'),
      pending: t('maglev.editor.header_nav.revert_button.in_progress'),
      )%>
  <% end %>
</div>

